{
    "compilerOptions": {
        "declaration": true,
        "target": "ES2024",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "skipDefaultLibCheck": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
    },
    "files": [
        "src/index.ts"
    ],
    "include": [
        "src/**/*.ts",
        "pkg/**/*.js"
    ]
}
